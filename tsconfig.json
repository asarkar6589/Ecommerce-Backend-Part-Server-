{
  "compilerOptions": {
    "target": "ES2020",               
    "module": "NodeNext",   
    "rootDir": "src",   // all the typescripts file will be here.    
    "moduleResolution": "NodeNext",                      
    "outDir": "dist",        // all the javascript files will be here.                           
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                            
  }
}
